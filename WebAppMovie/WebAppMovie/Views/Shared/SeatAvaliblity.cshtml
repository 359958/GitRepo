@model IEnumerable<WebAppMovie.Models.TicketAvaliblity>

@{
    Layout = null;
}
<style>
    .class1{
        color:palegreen
    }
    .class2 {
        color: aqua
    }
</style>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title" id="myModalLabel">Ticket Details</h4>
</div>
   
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Screen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.s1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.s2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.s3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.s4)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Screen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassType) 
            </td>
         
            <td>
                @Html.DisplayFor(modelItem => item.s1, new { @class = "class2" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.s2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.s3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.s4)
            </td>
            
        </tr>
    }
    
    </table>

