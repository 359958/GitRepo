@model WebAppMovie.Models.movieDetailsList

@{
    Layout = "~/Views/Shared/_new.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddMovie</title>
</head>
<body>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/Moviejs.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <!--  jQuery -->
    <script type="text/javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>

    <!-- Isolated Version of Bootstrap, not needed if your site already uses Bootstrap -->
    <link rel="stylesheet" href="https://formden.com/static/cdn/bootstrap-iso.css" />

    <!-- Bootstrap Date-Picker Plugin -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css" />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div align="center" class="form-horizontal">
        <h4>Admi Page</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Label("Add New Movies", htmlAttributes: new { @class = "form-control" })
        <br/>
        <br/>
        <div class="form-group">
            @Html.LabelFor(model => model.Screen, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" id="Screen">
                    <option value="S1">Screen 1</option>
                    <option value="S2">Screen 2</option>
                    <option value="S3">Screen 3</option>
                    <option value="S4">Screen 4</option>
                    <option value="S5">Screen 5</option>


                </select>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Movie, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("MovieName", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Movie, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <!-- Date input -->
            <label class="control-label col-md-2" for="date">Running From:</label>
            <div class="col-md-10">
                <input class="form-control" id="from" name="date" placeholder="MM/DD/YYY" type="text" />
            </div>
        </div>


        <div class="form-group">
            <!-- Date input -->
            <label class="control-label col-md-2" for="date">Upto:</label>
            <div class="col-md-10">
                <input class="form-control" id="date" name="date" placeholder="MM/DD/YYY" type="text" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" id="btnAdd" value="Add" class="btn btn-default" />
            </div>
        </div>
        <div align="right">
            @Html.ActionLink("Edit Movies", "Index", "Admin")
        </div>
    </div>
    }


</body>
</html>
