@model WebAppMovie.Models.MovieDetails

@{
    Layout = "~/Views/Shared/_new.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BooKMovie</title>
</head>
<body>
  
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>MovieDetails</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Select Movie", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.MovieID, new SelectList(ViewBag.Movie, "MovieID", "MovieName") ,
               new { @class = "form-control" })


              
            </div>
        </div>

        <div class="form-group">
            @Html.Label("ClassType",null, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ClassId", (IEnumerable<SelectListItem>)ViewBag.Classid, new {@class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <!-- Date input -->
            <label class="control-label col-md-2" for="date">Date</label>
            <div class="col-md-10">
                <input class="form-control" id="datepicker" name="BookingDate" placeholder="MM/DD/YYY" type="text" />
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Show Time", null, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Showid", (IEnumerable<SelectListItem>)ViewBag.Showid, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>

        <div class="form-group">
            @Html.Label("No of Tickets", null, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("NoTickets", (IEnumerable<SelectListItem>)ViewBag.NoTickets, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="btnBook"  formaction="BooKMovie" value="Submit" class="btn btn-default" />
            </div>
        </div>
        
    </div>
    }

</body>
</html>
    