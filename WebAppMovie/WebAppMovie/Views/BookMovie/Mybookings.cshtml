    ViewBag.Title = "Mybookings";
    Layout = "~/Views/Shared/_new.cshtml";
}
<!DOCTYPE html>


    <meta name="viewport" content="width=device-width" />


    <h4>Mybookings</h4>

    @*---------------------------------------------------------------*@
    <script src="~/Scripts/Boot/jquery-3.3.1.js"></script>
